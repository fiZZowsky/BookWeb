@{
    ViewData["Title"] = "Home Page";
}

<div class="d-flex flex-wrap justify-content-center align-items-center">
    <div class="d-flex flex-column flex-md-row">
        <div class="d-flex flex-column flex-md-grow-1 align-items-center justify-content-center">
            <div class="d-flex text-md-left text-center pt-5">
                <h1 id="main-text">Find the book you're looking for easier to read.</h1>
            </div>
        </div>
        <div class="d-flex flex-wrap justify-content-center ml-md-5 mt-5 mt-md-0">
            <img class="mw-100 h-auto" src="@Url.Content("~/Resources/hand-main.png")" />
        </div>
    </div>
</div>

<style>
    #main-text {
        opacity: 0;
        top: 50%;
        left: 0;
        transform: translateY(-50%);
        font-size: 2vw;
        font-weight: 900;
        font-family: Arial, sans-serif;
        color: #000000;
        padding: 20px;
        animation: fadeIn 2s forwards;
    }

    @@keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(-50%) translateX(-50px);
        }

        to {
            opacity: 1;
            transform: translateY(-50%) translateX(0);
        }
    }

    @@media only screen and (max-width: 768px) {
        #main-text {
            font-size: 5vw;
        }

        .flex-column.flex-md-row {
            flex-direction: column;
        }

        .ml-md-5 {
            margin-left: 0 !important;
        }

        .mt-5.mt-md-0 {
            margin-top: 20px !important;
        }
    }
</style>
