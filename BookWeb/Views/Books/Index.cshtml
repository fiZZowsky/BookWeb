@model Tuple<IEnumerable<Category>, IEnumerable<Book>>

<div class="d-flex flex-row w-100 h-100 m-3 p-3">
    <div class="d-flex flex-column me-5 pe-5">
        <partial name="_CategoriesPartial" , model="Model.Item1" />
    </div>
    <div class="d-flex flex-column">
        <h3>
            @if (ViewBag.CategoryId != null)
            {
                <span>Selected Category: @Model.Item1.FirstOrDefault(c => c.Id == ViewBag.CategoryId)?.Name</span>
            }
        </h3>
        <partial name="_BooksByCategoryPartial" , model="Model.Item2" />
    </div>
</div>
